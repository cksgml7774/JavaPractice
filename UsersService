package study.java.Helloworld.service;

import java.util.List;

import study.java.Helloworld.model.Users;

public interface UsersService {
	
	// 회원가입
	public Users join(Users users) 
			throws NullPointerException, Exception;

	// 로그인
	public Users login(Users users) 
			throws NullPointerException,Exception;

	// 회원정보 조회
	public Users getUserInfo(Users users) 
			throws NullPointerException,Exception;

	// 회원정보 수정
	public Users editUserInfo(Users users) 
			throws NullPointerException,Exception;

	// 회원목록 조회
	public List<Users> getUserList(Users users)
			throws NullPointerException,Exception;
	
	// 회원탈퇴
	public void out(Users users) 
			throws NullPointerException,Exception;

}
